<html metal:use-macro="load: layout.pt">
  <div metal:fill-slot="masthead">
    <div class="container px-4 px-lg-5"
         style="padding-top: 2rem; padding-bottom: 3rem;"
    >
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-lg-10">
          <!-- Organization Name Form -->
          <div class="text-center mb-4">
            <form class="mb-3"
                  method="post"
            >
              <input name="csrf_token"
                     type="hidden"
                     value="${get_csrf_token()}"
              />
              <input name="action"
                     type="hidden"
                     value="update_name"
              />

              <div class="input-group input-group-lg justify-content-center"
                   style="max-width: 500px; margin: 0 auto;"
              >
                <input class="form-control"
                       id="name"
                       name="name"
                       required
                       type="text"
                       value="${organization.name}"
                />
                <button class="btn btn-light"
                        type="submit"
                >
                  Update Name
                </button>
              </div>
            </form>
            <p class="text-white-75 mb-0">Manage your organization settings and members</p>
          </div>

          <!-- Organization Users Table -->
          <div class="row justify-content-center">
            <div class="col-lg-10">
              <h4 class="text-white text-center mb-3">Organization Users</h4>

              <div class="table-responsive"
                   style="max-height: 300px; overflow-y: auto;"
              >
                <table class="table table-sm bg-white">
                  <thead>
                    <tr>
                      <th>Email</th>
                      <th>Owner</th>
                      <th>Joined</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr tal:repeat="user users">
                      <td>
                        <i class="bi bi-person me-2"></i>
                        ${user.email}
                      </td>
                      <td>
                        <input class="form-check-input"
                               disabled
                               type="checkbox"
                               tal:attributes="
                                 checked user in owners;
                               "
                        />
                      </td>
                      <td>
                        <small class="text-muted">
                          ${user.created_at.strftime('%m/%d/%y')}
                        </small>
                      </td>
                      <td>
                        <form class="d-inline"
                              method="post"
                              tal:condition="user in owners and user.id != current_user.id and len(owners) > 1"
                        >
                          <input name="csrf_token"
                                 type="hidden"
                                 value="${get_csrf_token()}"
                          />
                          <input name="action"
                                 type="hidden"
                                 value="remove_owner"
                          />
                          <input name="owner_id"
                                 type="hidden"
                                 value="${user.id}"
                          />
                          <button class="btn btn-sm btn-outline-danger"
                                  onclick="return confirm('Remove owner?')"
                                  type="submit"
                          >
                            <i class="bi bi-dash"></i>
                          </button>
                        </form>
                        <form class="d-inline"
                              method="post"
                              tal:condition="user not in owners"
                        >
                          <input name="csrf_token"
                                 type="hidden"
                                 value="${get_csrf_token()}"
                          />
                          <input name="action"
                                 type="hidden"
                                 value="add_owner"
                          />
                          <input name="email"
                                 type="hidden"
                                 value="${user.email}"
                          />
                          <button class="btn btn-sm btn-outline-primary"
                                  type="submit"
                          >
                            <i class="bi bi-plus"></i>
                          </button>
                        </form>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>

              <!-- Add User Form -->
              <div class="mt-3 mb-3">
                <form class="bg-white p-3 rounded"
                      method="post"
                >
                  <input name="csrf_token"
                         type="hidden"
                         value="${get_csrf_token()}"
                  />
                  <input name="action"
                         type="hidden"
                         value="add_user"
                  />

                  <div class="input-group">
                    <input class="form-control"
                           name="email"
                           placeholder="Enter user email to add to organization"
                           required
                           type="email"
                    />
                    <button class="btn btn-primary"
                            type="submit"
                    >
                      Add User
                    </button>
                  </div>
                </form>
              </div>

              <div class="mt-3 text-center">
                <a class="btn btn-light"
                   href="${request.route_url('diagrams')}"
                >
                  Back to Diagrams
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div metal:fill-slot="content">
  </div>
</html>
